mixin category-choices(tag) 
    li(class!=attributes.class).category__choices 
        span.cl-text=tag
        <i class="fas fa-arrow-right"></i>


mixin accordions-items(title, content)
    li(class!=attributes.class).services-details__container__content__accordions__items 
        .services-details__container__content__accordions__items--top 
            span= title
            <i class="fas fa-plus cl-blue"></i> 
        .services-details__container__content__accordions__items--bottom 
            p.cl-text= content   

mixin post(src,author, title)
    li.post 
        img(src =src)
        .box 
            p 
                span.cl-green-blue @
                span=author
            p.bold=title  


mixin comments-list-item(src, name, time, cmt) 
    li.comments-list-item
        img(src= src) 
        .box 
            p.info  
                span.name.bold= name 
                span.time.cl-blue= time 
            p.cmt.cl-text= cmt 
        span.reply.upcase reply